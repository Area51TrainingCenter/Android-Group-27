<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jcodee.mod1class1"
    android:versionCode="1"
    android:versionName="1.0">

    <!--
    package = identificador único de aplicación en la Play Store
    versionCode = versión del código fuente
    versionName = versión visible para el usuario final
    -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--
        portrait = orientación de forma vertical
        landscape = orientación de forma horizontal
        -->

        <activity
            android:name="com.jcodee.mod1class1.InicioActivity"
            android:label="@string/hola"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeCustom">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
        <activity android:name=".InicioActivity"></activity>
        -->

    </application>

</manifest>